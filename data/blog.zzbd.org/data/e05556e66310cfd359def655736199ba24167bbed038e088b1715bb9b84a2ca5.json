built_in\"\u003eFileOpen\u003c/span\u003e(\u003cspan class=\"symbol\"\u003e@TempDir\u003c/span\u003e \u0026amp; \u003cspan class=\"string\"\u003e\u0026#34;\\autoitrss.xml\u0026#34;\u003c/span\u003e,\u003cspan class=\"number\"\u003e0\u003c/span\u003e)\u003c/span\u003e\u003cbr/\u003e\u003cspan class=\"line\"\u003e\u003c/span\u003e\u003cbr/\u003e\u003cspan class=\"line\"\u003e\u003cspan class=\"keyword\"\u003eIf\u003c/span\u003e $file = \u003cspan class=\"number\"\u003e-1\u003c/span\u003e \u003cspan class=\"keyword\"\u003eThen\u003c/span\u003e\u003c/span\u003e\u003cbr/\u003e\u003cspan class=\"line\"\u003e\u003cspan class=\"built_in\"\u003eMsgBox\u003c/span\u003e(\u003cspan class=\"number\"\u003e0\u003c/span\u003e, \u003cspan class=\"string\"\u003e\u0026#34;Error\u0026#34;\u003c/span\u003e, \u003cspan class=\"string\"\u003e\u0026#34;Unable to open file.\u0026#34;\u003c/span\u003e)\u003c/span\u003e\u003cbr/\u003e\u003cspan class=\"line\"\u003e\u003cspan class=\"keyword\"\u003eExit\u003c/span\u003e\u003c/span\u003e\u003cbr/\u003e\u003cspan class=\"line\"\u003e\u003cspan class=\"keyword\"\u003eEndIf\u003c/span\u003e\u003c/span\u003e\u003cbr/\u003e\u003cspan class=\"line\"\u003e\u003c/span\u003e\u003cbr/\u003e\u003cspan class=\"line\"\u003e$chars = \u003cspan class=\"built_in\"\u003eFileRead\u003c/span\u003e($file)\u003c/span\u003e\u003cbr/\u003e\u003cspan class=\"line\"\u003e\u003cspan class=\"keyword\"\u003eGlobal\u003c/span\u003e $arrayt = \u003cspan class=\"built_in\"\u003eStringRegExp\u003c/span\u003e($chars, \u003cspan class=\"string\"\u003e\u0026#39;\u0026lt;title\u0026gt;(.+?)\u0026lt;\\/title\u0026gt;\u0026#39;\u003c/span\u003e,\u003cspan class=\"number\"\u003e3\u003c/span\u003e)\u003c/span\u003e\u003cbr/\u003e\u003cspan class=\"line\"\u003e\u003cspan class=\"keyword\"\u003eGlobal\u003c/span\u003e $arrayl = \u003cspan class=\"built_in\"\u003eStringRegExp\u003c/span\u003e($chars, \u003cspan class=\"string\"\u003e\u0026#39;\u0026lt;link\u0026gt;(.+?)\u0026lt;\\/link\u0026gt;\u0026#39;\u003c/span\u003e,\u003cspan class=\"number\"\u003e3\u003c/span\u003e)\u003c/span\u003e\u003cbr/\u003e\u003cspan class=\"line\"\u003e\u003cspan class=\"keyword\"\u003eGlobal\u003c/span\u003e $arrayp = \u003cspan class=\"built_in\"\u003eStringRegExp\u003c/span\u003e($chars, \u003cspan class=\"string\"\u003e\u0026#39;\u0026lt;pubDate\u0026gt;(.+?)\u0026lt;\\/pubDate\u0026gt;\u0026#39;\u003c/span\u003e,\u003cspan class=\"number\"\u003e3\u003c/span\u003e)\u003c/span\u003e\u003cbr/\u003e\u003cspan class=\"line\"\u003e_ArrayDelete($arrayl, \u003cspan class=\"number\"\u003e0\u003c/span\u003e)\u003c/span\u003e\u003cbr/\u003e\u003cspan class=\"line\"\u003e_ArrayDelete($arrayt, \u003cspan class=\"number\"\u003e0\u003c/span\u003e)\u003c/span\u003e\u003cbr/\u003e\u003cspan class=\"line\"\u003e\u003cspan class=\"built_in\"\u003eFileClose\u003c/span\u003e($file) \u003c/span\u003e\u003cbr/\u003e\u003cspan class=\"line\"\u003e\u003c/span\u003e\u003cbr/\u003e\u003cspan class=\"line\"\u003e\u003cspan class=\"comment\"\u003e;_ArrayDisplay($arrayt)\u003c/span\u003e\u003c/span\u003e\u003cbr/\u003e\u003cspan class=\"line\"\u003e\u003cspan class=\"comment\"\u003e;_ArrayDisplay($arrayl)\u003c/span\u003e\u003c/span\u003e\u003cbr/\u003e\u003cspan class=\"line\"\u003e\u003cspan class=\"comment\"\u003e;_ArrayDisplay($arrayp)\u003c/span\u003e\u003c/span\u003e\u003cbr/\u003e\u003cspan class=\"line\"\u003e\u003cspan class=\"keyword\"\u003eIf\u003c/span\u003e \u003cspan class=\"built_in\"\u003eFileExists\u003c/span\u003e(\u003cspan class=\"string\"\u003e\u0026#34;config.ini\u0026#34;\u003c/span\u003e) \u003cspan class=\"keyword\"\u003eThen\u003c/span\u003e\u003c/span\u003e\u003cbr/\u003e\u003cspan class=\"line\"\u003e\u003cspan class=\"keyword\"\u003eLocal\u003c/span\u003e $pubDate = \u003cspan class=\"built_in\"\u003eIniRead\u003c/span\u003e(\u003cspan class=\"string\"\u003e\u0026#34;config.ini\u0026#34;\u003c/span\u003e, \u003cspan class=\"string\"\u003e\u0026#34;Date\u0026#34;